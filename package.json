{
  "name": "boilerplate",
  "version": "0.0.0",
  "description": "Boilerplate project for TypeScript/Karma/SystemJS",
  "scripts": {
    "build": "webpack",
    "dev": "webpack-dev-server --open",
    "lint": "tslint --config ./tslint.json --project tsconfig.json",
    "postinstall": "npm run build",
    "setup": "node ./script/directory-structure.js",
    "test": "karma start karma.conf.js",
    "test:watch": "karma start karma.conf.js --no-single-run --auto-watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joppe/boilerplate"
  },
  "author": {
    "name": "Joppe Aarts",
    "email": "joppe@apestaartje.info"
  },
  "license": "MIT",
  "keywords": [
    "Karma",
    "TypeScript",
    "JavaScript",
    "Jasmine",
    "Webpack"
  ],
  "devDependencies": {
    "@types/jasmine": "^2.8.6",
    "jasmine-core": "^2.99.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.1",
    "karma-typescript": "^3.0.12",
    "tslint": "^5.9.1",
    "tslint-rules": "git+https://github.com/joppe/tslint-rules.git"
  },
  "dependencies": {
    "awesome-typescript-loader": "^3.4.1",
    "http-server": "^0.11.1",
    "source-map-loader": "^0.2.3",
    "typescript": "^2.7.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  }
}
